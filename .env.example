# Veritabanı
DATABASE_URL=postgres://user:password@localhost:5432/qivio

# JWT (backoffice auth)
JWT_SECRET=your-jwt-secret-min-32-chars

# Cookie (customer_session)
COOKIE_SECRET=your-cookie-secret-min-32-chars

# Public URL (frontend / callback)
PUBLIC_BASE_URL=http://localhost:3000

# reCAPTCHA v3 (false = doğrulama atlanır, dev için)
RECAPTCHA_ENABLED=true
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_MIN_SCORE=0.5

# Ödeme (false = checkout ve webhook devre dışı)
PAYMENT_ENABLED=true
PAYMENT_PROVIDER=paytr
# PayTR
PAYTR_MERCHANT_ID=
PAYTR_MERCHANT_KEY=
PAYTR_MERCHANT_SALT=
# iyzico
IYZICO_API_KEY=
IYZICO_SECRET_KEY=
IYZICO_BASE_URL=https://api.iyzipay.com

# SMS (twilio | ...)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# WhatsApp
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_APP_SECRET=

# Super-admin (opsiyonel; tanımlanırsa ilk açılışta kullanıcı oluşturulur)
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=change-me

# Ortam
NODE_ENV=development
PORT=4000
SEQUELIZE_ALTER=false
